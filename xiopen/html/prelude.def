.block anchor
<A NAME="$(ANCHOR)">&nbsp;</A>
.end

.block dir_open
<PRE>
.block dir_entry
$(*DIR_HREF="$(DIR_NAME)") $(DIR_SIZE) $(DIR_DATE) $(DIR_TIME)  $($(DIR_EXT))
.block dir_close
</PRE>
.end

.block index_open
.block index_entry
.if "$(INDEX_PAGE)" eq "$(PAGE)"
| <EM>$(INDEX_TITLE)</EM>
.else
| $(*INDEX_PAGE="$(INDEX_TITLE)")
.endif
.endblock

.include filetype.def
.include macros.def

.macro linkto <A HREF="http://$1">$1</A>

.macro file -
.if -e "$(LOCAL)$(xitami)/$1" -
<TD BGCOLOR=#D3D3D3> -
<A HREF="$2/$1">$1</A><BR>[&file_size\("$(LOCAL)$(xitami)/$1","K") Kb] -
.else -
<TD>$1<BR>N/A -
.endif

